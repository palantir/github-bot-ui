{
  "extends": "eslint:recommended",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "no-trailing-spaces": 2,
    "semi": [2, "always"],
    "strict": [2, "safe"],
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2
  }
}
